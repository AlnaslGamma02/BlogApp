<% provide(:title, "ユーザーの一覧") %>

<div class="container">
  <div class="row my-2">
    <h1>ユーザーの一覧</h1>
  </div>
</div>

<div class="container">
  <%# ページネーション　ここから %>
  <% unless @users.nil? %>
    <div class="row">
      <%# PC用 %>
      <section class="col d-none d-md-inline">
        <nav class="mt-2 pt-2">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <%= will_paginate(@users,
                  :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)
              %>
            </li>
          </ul>
        </nav>
      </section>
      <%# スマホ・タブ用 %>
      <section class="col d-md-none d-inline">
        <nav class="mt-2 pt-2">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <%= will_paginate(@users,
                  :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer,
                  :previous_label => "<<",
                  :next_label => ">>",
                  :inner_window => 1)
              %>
            </li>
          </ul>
        </nav>
      </section>
    </div>
  <% end %>
  <%# ページネーション　ここまで %>
  <%# ユーザー情報　ここから %>
  <div class="row">
    <div class="col">
      <% @users.each do |user| %>
        <div class="media my-2">
          <%# アバター画像 %>
          <div class="mr-3">
            <%= gravatar_for user, size: 50 %>
          </div>
          <%# ユーザー名 %>
          <div class="media-body">
            <span class="align-middle">
              <%= link_to user.username, user_path(id: user.id) %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%# ユーザー情報　ここまで %>
  <%# ページネーション　ここから %>
  <% unless @users.nil? %>
    <div class="row">
      <%# PC用 %>
      <section class="col d-none d-md-inline">
        <nav class="mt-2 pt-2">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <%= will_paginate(@users,
                  :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer)
              %>
            </li>
          </ul>
        </nav>
      </section>
      <%# スマホ・タブ用 %>
      <section class="col d-md-none d-inline">
        <nav class="mt-2 pt-2">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <%= will_paginate(@users,
                  :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer,
                  :previous_label => "<<",
                  :next_label => ">>",
                  :inner_window => 1)
              %>
            </li>
          </ul>
        </nav>
      </section>
    </div>
  <% end %>
  <%# ページネーション　ここまで %>
</div>